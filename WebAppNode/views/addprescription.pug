html
    head
        style
            include addprescription.css
    body
        h1(id="top") Welcome to Online Pharmacy
        div(id="line")
            p Hello, #{nm}
        div(id="main")
            h1 Available Medicines
            form(action='/adduserprescription', method='POST')
                table
                    tr
                        th Medicine ID
                        th Medicine Name
                        th Authentication Required
                    - for(i=1;i<=sub.length;i++)
                        tr
                            td #{coursesid[i-1]}
                            td #{sname[i-1]}
                            td #{sub[i-1]}
                            td
                                input(type="checkbox" class="mids" name="mid" value=`${coursesid[i-1]}`)
                input(type='submit' class='btmbtns' value='Submit')
        div(id="bottom")
            a(href='/logout' class="btmbtns") Log Out
            a(href='/page' class="btmbtns") Go Back
