html
    head
        style
            include signup.css
    body
        h1(id="top") Welcome to Online Pharmacy
        div(id="login")
            h1(style="font-size:3vw") Sign Up
            div(id="inp")
                form(action='/signup' method="POST")
                    label(for="fname") Username
                    br
                    input(type="text" id="fname" name="username" placeholder="Email Id")
                    br
                    label(for="lname") Password
                    br
                    input(type="password" id="lname" name="password" placeholder="Password")
                    br
                    label(for="name") Name
                    br
                    input(type="text" id="sname" name="name" placeholder="Name")
                    br
                    label(for="age") Age
                    br
                    input(type="text" id="tname" name="age" placeholder="Age")
                    br
                    br
                    input(type="submit" id="logbtn")
                    p #{message}
            br
            br
            br
            br
            br
            br
            br
            br
            br
            a(id="logbtn" style='font-size: 2vw; padding:1vw;' href='/index') Home