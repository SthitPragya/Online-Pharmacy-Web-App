html
    head
        style
            include adminlogin.css
    body
        h1(id="top") Welcome to Online Pharmacy
        div(id="login")
            h1(style="font-size:3vw") Login for Administrators
            div(id="inp")
                form(action='/admin' method="POST")
                    label(for="fname") Username
                    br
                    input(type="text" id="fname" name="username" placeholder="Id")
                    br
                    label(for="lname") Password
                    br
                    input(type="password" id="lname" name="password" placeholder="Password")
                    br
                    br
                    input(type="submit" id="logbtn")
                    p #{message}
            br
            a(id="logbtn" style='font-size: 2vw; padding:1vw;' href='/index') Home